<% include header%>
<% include navbar%>

<h2><%= title%></h2>

<form method='POST' action='/categories/save'>
<!-- hidden input fields-->
<input type='hidden' name='docreate' value='<%= docreate ? "create" : "update"%>'>
<input type='hidden' name='categoryid' value='<%= category ? categoryid : "" %>'/>

<div class="container gridContainer" >
  <div class="row">
    <div class="col-sm-12" >

      <div class="form-group">
        <label for="categoryname">Category Name</label>
        <input required  minlength="2"  class="form-control" type="text" name='categoryname' id="categoryname" value='<%= category ? category.categoryname : "" %>' />
      </div>

      <div class="form-group">
        <label class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" name='reusable' id="reusable" <%= (category && category.reusable==1) ? "checked" : "" %> />
          <span class="custom-control-indicator"></span>
          <span class="custom-control-description">Reusable</span>
        </label>
      </div>

    </div>
  </div>
</div>

<div class="container gridContainer textCenter" >
  <div class="row">
    <div class="col-sm-6 noBgColor" >
      <a href="/categories" class="btn btn-warning" >Cancel</a>
    </div>
    <div class="col-sm-6 noBgColor" >
      <input type='submit' value='Save' class="btn btn-success"/>
    </div>
  </div>
</div>
</form>

<% include bodyEndAndScripts%>
