<% include header%>
<% include navbar%>

<form method='POST' action='/categories/save'>
<!-- hidden input fields-->
<input  type='hidden' name='docreate' value='<%= docreate ? "create" : "update"%>'>
<input type='hidden' name='categoryid' value='<%= category ? categoryid : "" %>'/>

<div class="container-fluid icon-container" >
  <div class="row">
    <div class="col-sm-6" >
        Category Name:
    </div>
    <div class="col-sm-6" >
        <input class="form-control" type='text' name='categoryname' value='<%= category ? category.categoryname : "" %>' />
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6" >
        Reusable:
    </div>
    <div class="col-sm-6" >
        <input class="form-check-input" type='checkbox' name='reusable' <%= (category && category.reusable==1) ? "checked" : "" %> />
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12" >
      <input type='submit' value='Submit' />
    </div>
  </div>


</div>
</form>

<% include bodyEndAndScripts%>
